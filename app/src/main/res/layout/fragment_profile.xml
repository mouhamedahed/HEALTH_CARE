<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tn.esprit.health_care.ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:id="@+id/linearll">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Account Settings"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:focusableInTouchMode="false"

            />

        <TextView
            android:id="@+id/logoutTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Logout"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"
            android:textStyle="normal"
            android:focusableInTouchMode="false"

            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/linearll"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearll"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/usernameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Username"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold"
            android:focusableInTouchMode="false"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:text="Username"
                android:textSize="18dp"
                android:textStyle="bold"
                android:focusableInTouchMode="false"
                />

            <EditText
                android:id="@+id/userEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:hint="Username"
                android:inputType="text"
                android:textSize="18dp"
                android:focusableInTouchMode="false"

                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            android:focusableInTouchMode="false"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:text="Email"
                android:textSize="18dp"
                android:textStyle="bold"
                android:focusableInTouchMode="false"
                />

            <EditText
                android:id="@+id/emailUEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="18dp"
                android:focusableInTouchMode="false"

                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:text="Phone"
                android:textSize="18dp"
                android:textStyle="bold"
                android:focusableInTouchMode="false"
                />

            <EditText
                android:id="@+id/phoneEt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:hint="Phone"
                android:inputType="number"
                android:textSize="18dp"
                android:focusableInTouchMode="false"
                />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/editP"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_btn"
                android:drawableLeft="@drawable/ic_edit"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Edit Profile"
                android:textColor="@color/colorAccent"
                android:textSize="18dp"
                android:focusableInTouchMode="false"
                />

            <TextView
                android:id="@+id/changeP"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn"
                android:drawableLeft="@drawable/bg_btn_cancel"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Change Password"
                android:textColor="@color/colorAccent"
                android:textSize="18dp"
                android:focusableInTouchMode="false"
                />


            <EditText
                android:id="@+id/editPTv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:hint="New Password"
                android:inputType="textPassword"

                android:textSize="18dp"
                android:focusableInTouchMode="false"
                />

            <EditText
                android:id="@+id/editPTv2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:hint="Re-enter Password"
                android:inputType="textPassword"
                android:textSize="18dp"
                android:focusableInTouchMode="false"
                />

            <TextView
                android:id="@+id/saveU"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_save"
                android:gravity="center"

                android:text="Save"
                android:textColor="@color/colorAccent"
                android:textSize="18dp"
                android:focusableInTouchMode="false"
                />

            <TextView
                android:id="@+id/saveP"
                android:layout_width="100dp"
                android:layout_height="50dp"

                android:background="@drawable/bg_btn_save"
                android:gravity="center"

                android:text="Save"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>






</RelativeLayout>